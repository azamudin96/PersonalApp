<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedSV"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="100dp"
            android:id="@+id/writeDiary"
            android:layout_marginHorizontal="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:visibility="visible"
                android:layout_marginBottom="15dip"
                android:id="@+id/linearPhoto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:textColor="#323643"
                    android:textSize="22sp"/>

                <View
                    android:background="@color/colorPrimary"
                    android:layout_width="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_height="4dp"/>

                <RelativeLayout
                    android:layout_marginTop="12dip"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/notePhoto"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/deleteNotePhoto"
                        android:text="DELETE PHOTO"
                        android:paddingHorizontal="12dip"
                        android:paddingVertical="15dip"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Save your info here..."
                android:textColor="#323643"
                android:textSize="22sp"/>

            <View
                android:background="@color/colorPrimary"
                android:layout_width="20dp"
                android:layout_marginTop="5dip"
                android:layout_height="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                app:hintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/username">

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:background="@null"
                    android:textStyle="italic" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                app:hintEnabled="true"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/password">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:hint="Password"
                    android:inputType="textPersonName"
                    android:background="@null"
                    android:textStyle="italic" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
